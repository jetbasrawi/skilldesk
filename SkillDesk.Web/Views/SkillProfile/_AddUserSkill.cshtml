@model SkillDesk.Web.Models.AddSkillViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@{ Html.EnableClientValidation(); }

@using (Html.BeginForm("AddSkill", "SkillProfile")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Add User Skill</legend>

        <div class="form-field">
            @Html.LabelFor(x=>x.SkillName)
            @Html.EditorFor(x => x.SkillName)
            @Html.ValidationMessageFor(x=>x.SkillName)
        </div>
            
        @foreach (var type in (SelectList)ViewData["ExperienceTypes"])
        {
            <div class="experience-level-list">
                @Html.RadioButton("ExperienceType", type.Value)<label for="ExperienceType">@type.Text</label>
            </div>    
        }
        <p>
            <input type="submit" value="Save" />
        </p>

    </fieldset>
}